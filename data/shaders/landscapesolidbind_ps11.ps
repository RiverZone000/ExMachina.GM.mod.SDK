#include "lib.fx"

sampler LandscapeSampler;

// vertex shader output structure
struct VS_OUTPUT
{
	float4 Pos	: POSITION;
	float2 Tex	: TEXCOORD0;
	float4 Col	: COLOR0;
	float  fog	: FOG;
};

/// 
REAL4 LandscapePS( VS_OUTPUT v ) : COLOR
{
	return  tex2D( LandscapeSampler, v.Tex ) * v.Col;
}